<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
    <!-- Latest compiled and minified JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
    <script>
       var intentos=0;
        var timer=3;
        var seg=0;
        var min=0;
        setInterval(function() {
      if(timer>1){
          timer--;
          $("#timer").html(timer);
      }
      else if(timer==1){
          $("#timer").html("Start");
          setTimeout(function (){
              $("#timer").css('display','none');
              $("#btn").css('display','block')
              timer=0;

          },1000)
      }
      if(timer==0) {
          seg++;
          if (seg > 59) {
              min++;
              seg = 0;
          }


          if(seg < 10) {
              var seconds = "0"+seg;
          }else{
              var seconds = seg;
          }
          if(min<10){
              var minutes="0"+min;
          }else{
              var minutes=min;
          }
          $("#time").html(min+ ":" +seconds);
      }
        },1000);
        $("#btn").hover(function (){
            $(this).css('margin-top',Math.trunc(Math.random()*450)).css('margin-left',Math.trunc(Math.random()*650))
             intentos++;
            if(intentos==20){
                alert("Lo estas intentando al menos?");

            }  if(intentos==40){
                alert("Mi abuelita ya lo hubiera hecho");

            }
            })
    </script>
